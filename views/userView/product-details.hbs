                <option value="productSizeSmall">S</option>
                <option value="productSizeMedium">M</option>
                <option value="productSizeLarge">L</option>
                <option value="productSizeXLarge">XL</option>
                <option value="productSizeXXLarge">XXL</option>
                {{/if}}
                {{#if proDetails.bottom}}
                <option value="productSize32">32</option>
                <option value="productSize34">34</option>
                <option value="productSize36">36</option>
                <option value="productSize38">38</option>
                <option value="productSize40">40</option>
                {{/if}}
                {{#if proDetails.nosize}}
                <option value="productFreeSize">freesize</option>
                {{/if}}

            </select>

            <div class="d-flex flex-column">
            <span>Select Quantity</span>
            <input type="number" min="1" max="5" value="1" name="quantity" id="productQuantitySelection">
            </div>

            <button class="normal mt-3" onclick="addToCartFromProPage('{{proDetails._id}}')">Add to cart</button>
            <a style="text-decoration: none; color: white;" href="/add-to-wishlist/{{proDetails._id}}"><button class="normal bg-danger ms-2"><i class="fa-solid fa-heart fa-xl"></i></button></a>
            
            
            <h4 style="font-weight: 300;">Product Details</h4>
            <span>{{proDetails.productDescription}}</span>
        </div>
    </section>

