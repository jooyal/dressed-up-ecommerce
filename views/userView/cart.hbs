    <!-- cart items details-->
    <div class="small-container">
      <table>
        <tr>
          <th>#</th>
          <th>Product</th>
          <th>Size</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>

        {{#each products}}

        <tr>
          <td>
            {{inc @index}}
          </td>
          <td>
            <div class="cart-info">
              <img style="width: 110px; height: 147.5px;" src="/productImages/{{this.product.image1}}" alt="Tshirt" />
              <div>
                <p>{{this.product.productName}}</p>
                <small>&#8377 {{this.product.productPrice}}</small>
                <br />
                <a href="#" class="bg-danger text-white px-2 py-1 rounded">Remove</a>
              </div>
            </div>
          </td>
          <td>
            {{this.size}}
          </td>
          <td>
            <a href="" class="btn-danger px-2 py-1 rounded">-</a>
            <input type="number" value="{{this.quantity}}" disabled />
            <a href="" class="btn-success px-2 py-1 rounded">+</a>
          </td>
          <td>&#8377 {{this.subTotal}}</td>
        </tr>
        
        {{/each}}

      </table>

      <div class="total-price">
        <table>
          <tr>
            <td>Sum Total</td>
            <td>&#8377 {{total.sumTotal}}</td>
          </tr>
          <tr>
            <td>Tax (GST @ 12%)</td>
            <td>&#8377 {{total.taxAmount}}</td>
          </tr>
          <tr>
            <td>Grand Total</td>
            <td>&#8377 {{total.grandTotal}}</td>
          </tr>
        </table>
      </div>
      <a href="" style="width: 50%; margin-left: 25%;" class="btn btn-success text-center my-4">Check Out</a>
    </div>

    